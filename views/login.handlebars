{{!-- {{#if loggedIn}} --}}
<div class="container d-flex w-100 h-auto">
  <div class="row w-100 d-flex justify-content-center">
    <div class="col-sm-12 col-lg-6 d-flex">
      <form id="signInForm">
        <h1>Sign In</h1>
        <div class="mb-3">
          <label for="usernameInput1" class="form-label">Username</label>
          <input type="text" class="form-control" id="usernameInput1" aria-describedby="usernameHelp">
          <div id="usernameHelp2" class="form-text text-light">Please enter your username</div>
        </div>
        <div class="mb-3">
        <label for="inputPassword1" class="form-label">Password</label>
        <input type="password" id="inputPassword1" class="form-control" aria-describedby="passwordHelpBlock">
        <div id="passwordHelpBlock" class="form-text text-light">Please enter your password</div>
        </div>
        <button type="submit" class="btn btn-primary">Sign me in!</button>
      </form>
    </div>

    <div class="col-sm-12 col-lg-6 d-flex">
      <form id="signUpForm">
        <h1>Sign Up</h1>
        <div class="mb-3">
          <label for="inputEmail2" class="form-label">Email address</label>
          <input type="email" class="form-control" id="inputEmail2" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text text-light">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="usernameInput2" class="form-label">Username</label>
          <input type="text" class="form-control" id="usernameInput2" aria-describedby="usernameHelp">
          <div id="usernameHelp2" class="form-text text-light">Please enter the unique username you'd like to use</div>
        </div>
        <div class="mb-3">
          <label for="inputPassword2" class="form-label">Password</label>
          <input type="password" id="inputPassword2" class="form-control" aria-describedby="passwordHelpBlock2">
          <div id="passwordHelpBlock2" class="form-text text-light">Your password must be 8-45 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.</div>
        </div>
        <div class="mb-3">
          <label for="inputPassword3" class="form-label">Password confirm</label>
          <input type="password" id="inputPassword3" class="form-control" aria-describedby="passwordHelpBlock3">
          <div id="passwordHelpBlock3" class="form-text text-light">Please confirm the password you just typed.</div>
        </div>
        <button type="submit" class="btn btn-primary">Create account</button>
      </form>
    </div>
  </div>
</div>
<script src="./login.js"></script>
{{!-- {{else}}
<h1>You are already logged in!</h1>
{{/if}} --}}