<form id="newPostForm">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="titleHelp" placeholder="Enter title" maxlength="30">
    <small id="titleHelp" class="form-text text-muted">Give your post a title</small>
  </div>
  <div class="form-group">
    <label for="description">Content</label>
    <textarea class="form-control" id="description" rows="10" placeholder="Type your content here!"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/editPost.js"></script>